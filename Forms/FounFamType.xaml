<Window x:Class="HDR_EMEA.Forms.FounFamType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HDR_EMEA.Forms"
        mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800"
             MinHeight="500"
             MinWidth="500"
             ResizeMode="CanResize"
             Title="HDR">
    <Border Background="#FF3294AD">
        <Grid Margin="10" Background="GhostWhite">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Row="0" Grid.ColumnSpan="3" Fill="#FF3294AD"/>
            <Label Grid.Row="0" Grid.Column="1" Content="Foundation Families" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30" FontWeight="Bold"></Label>
            <Image Source="pack://application:,,,/HDR_EMEA;component/Resources/HDR_Logo_K.png" HorizontalAlignment="Right" Grid.Column="1"/>
            <Label Grid.Row="1" Grid.Column="1" Content="Select Foundation Family :" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold"></Label>
            <DataGrid x:Name="dgFamilyGrid" Grid.Column="1" Grid.Row="2" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" SelectionMode="Extended" SelectionUnit="FullRow" Background="LightGray" EnableColumnVirtualization="False">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="25">
                        <DataGridTemplateColumn.Header>
                            <CheckBox Click="HeaderCheckBox_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Family Name" Binding="{Binding FamilyName}" Width="*"/>
                    <DataGridTextColumn Header="Family Type" Binding="{Binding FamilyType}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <ToggleButton x:Name="tglShowAll"
                  Grid.Column="0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                  Margin="0,0,10,0"
                  Content="Show All Structural Foundations"
                  IsChecked="False"
                  Checked="tglShowAll_Checked"
                  Unchecked="tglShowAll_Unchecked"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="btnSelect" Width="100" Height="25" Margin="0,0,10,0" Click="btnSelect_Click">Select</Button>
                    <Button x:Name="btnCancel" Width="100" Height="25" Click="btnCancel_Click">Cancel</Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>

