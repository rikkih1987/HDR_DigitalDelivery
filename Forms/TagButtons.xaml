<Window x:Class="HDR_EMEA.Forms.TagButtons"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tag Tools" Height="520" Width="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Border Background="#FF3294AD" Padding="10">
        <Grid Background="GhostWhite">
            <Grid.RowDefinitions>
                <RowDefinition Height="56"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Rectangle Grid.Row="0" Grid.ColumnSpan="3" Fill="#FF3294AD"/>
            <DockPanel Grid.Row="0" LastChildFill="True">
                <TextBlock Text="Tag Categories"
                           FontSize="28" FontWeight="Bold"
                           Margin="6,0,0,0"
                           VerticalAlignment="Center"/>
                <Image Source="pack://application:,,,/HDR_EMEA;component/Resources/HDR_Logo_K.png"
                        HorizontalAlignment="Right" Margin="0,0,6,0"/>
            </DockPanel>

            <!-- Separator -->
            <Border Grid.Row="1" Background="#66000000" Height="1"/>

            <!-- Buttons -->
            <ScrollViewer Grid.Row="3" Margin="8" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="icButtons">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" Margin="0"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Label}"
                                    Tag="{Binding Bic}"
                                    Margin="4"
                                    Padding="12,8"
                                    MinWidth="140"
                                    Click="TagButton_Click">
                                <Button.ToolTip>
                                    <TextBlock Text="{Binding FullLabel}"/>
                                </Button.ToolTip>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer -->
            <StackPanel Grid.Row="4" Orientation="Horizontal"
                        Margin="8" HorizontalAlignment="Right">
                <Button Width="110" Height="30" Margin="0,0,8,0"
                        Click="btnClose_Click">Close</Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>