<Window x:Class="HDR_EMEA.Forms.FounRefForm"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HDR_EMEA.Forms"
        mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800"
             MinHeight="500"
             MinWidth="500"
             ResizeMode="CanResize"
             Title="HDR">
    <Border Background="#FF3294AD">
        <Grid Margin="10" Background="GhostWhite">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Row="0" Grid.ColumnSpan="5" Fill="#FF3294AD"/>
            <Label Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="4" Content="Foundation References" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30" FontWeight="Bold"></Label>
            <Image Source="pack://application:,,,/HDR_EMEA;component/Resources/HDR_Logo_K.png" HorizontalAlignment="Right" Grid.Column="3"/>
            <Label Grid.Row="1" Grid.Column="1" Content="Select Option :" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold"></Label>
            <Label Grid.Row="1" Grid.Column="2" Content="Descriptions :" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold"> </Label>
            
            
            <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" BorderThickness="0,2,0,2" BorderBrush="Black" Padding="3"/>
            <RadioButton Grid.Row="2" Grid.Column="1" x:Name="rbFullMarking" Content="Full Marking" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="2" Grid.Column="2" 
                       Text="Assigns fresh, sequential marks to all pilecaps, piles, and CoreBase slabs, ensuring consistent naming across the project. Important: This overrides any previously set references." 
                        TextWrapping="Wrap" VerticalAlignment="Center" Margin="5,0"/>
            
            <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" BorderThickness="0,0,0,2" BorderBrush="Black" Padding="3"/>
            <RadioButton Grid.Row="3" Grid.Column="1" x:Name="rbUpdateMarks" Content="Update Marks" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="3" Grid.Column="2" 
                        Text="Updates only empty or duplicate marks, keeping existing unique references intact. Ensures no two elements share the same reference." 
                        TextWrapping="Wrap" VerticalAlignment="Center" Margin="5,0"/>
            
            <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" BorderThickness="0,0,0,2" BorderBrush="Black" Padding="3"/>
            <RadioButton Grid.Row="4" Grid.Column="1" x:Name="rbMarkBySelection" Content="Mark By Selection" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="4" Grid.Column="2" 
                        Text="WIP" 
                        TextWrapping="Wrap" VerticalAlignment="Center" Margin="5,0"/>
            
            <Border Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" BorderThickness="0,0,0,2" BorderBrush="Black" Padding="3"/>
            <RadioButton Grid.Row="5" Grid.Column="1" x:Name="rbMarkByGrids" Content="Mark By Grids" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="5" Grid.Column="2" 
                        Text="Assigns marks based on the nearest grid intersection, using a structured P-[Grid1/Grid2]xx format for clarity. Commonly used on Data Center projects." 
                        TextWrapping="Wrap" VerticalAlignment="Center" Margin="5,0"/>


            <StackPanel Grid.Row="7" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" OpacityMask="#FF1C6B06">
                <Button x:Name="btnConfirm" Width="100" Height="25" Margin="0,0,10,0" Click="btnConfirm_Click">Confirm</Button>
                <Button x:Name="btnCancel" Width="100" Height="25" Click="btnCancel_Click">Cancel</Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
