<Window x:Class="HDR_EMEA.Forms.FounSetRef"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HDR_EMEA.Forms"
        mc:Ignorable="d"
             d:DesignHeight="240" d:DesignWidth="500"
             ResizeMode="NoResize"
             Title="HDR">
    <Border Background="#FF3294AD">
        <Grid Margin="10" Background="GhostWhite">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Row="0" Grid.ColumnSpan="4" Fill="#FF3294AD"/>
            <Label Grid.Row="0" Grid.Column="1" Content="Selected Foundations" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30" FontWeight="Bold"></Label>
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Prefix" FontSize="14" FontWeight="Bold"/>
                <TextBox x:Name="prefix" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Height="25"/>
            </Grid>
            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Start Number" FontSize="14" FontWeight="Bold"/>
                <TextBox x:Name="startnumber" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Height="25"/>
            </Grid>
            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Suffix" FontSize="14" FontWeight="Bold"/>
                <TextBox x:Name="suffix" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Height="25"/>
            </Grid>
            <Grid Grid.Row="4" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="" FontSize="14" FontWeight="Bold"/>
                <TextBox x:Name="Wind" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Width="100" Height="25"/>
            </Grid>
            <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal"  HorizontalAlignment="Right" OpacityMask="#FF1C6B06">
                <Button x:Name="btnSET" Content="SET" Width="100" Height="25" Margin="0,0,10,0" Click="btnSET_Click"></Button>
                <Button x:Name="btnFINISH" Content="FINISH" Width="100" Height="25" Click="btnFinish_Click"></Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
