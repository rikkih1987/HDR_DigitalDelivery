<Window x:Class="HDR_EMEA.Forms.SheetManagerForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HDR_EMEA.Forms"
        mc:Ignorable="d"
        Title="HDR" Height="1300" Width="1000">
    <Border Background="#FF3294AD">
        <Grid Margin="10" Background="GhostWhite">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Row="0" Grid.ColumnSpan="3" Fill="#FF3294AD"/>
            <Label Grid.Row="0" Grid.Column="1" Content="Sheet Updates" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="30" FontWeight="Bold"></Label>
            <Image Source="pack://application:,,,/HDR_EMEA;component/Resources/HDR_Logo_K.png" HorizontalAlignment="Right" Grid.Column="1"/>
            <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" 
                    Height="1" Background="Gray" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
            <Label Grid.Row="1" Grid.Column="1" Content="Select (Revision - Banner - Suitability):" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold"></Label>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10,0,10">
                <!-- First Row -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="chkRevision" Content="Revision Number" VerticalAlignment="Center" Grid.Column="0"/>
                    <ComboBox x:Name="cbRevision" Width="400" Grid.Column="1" ItemsSource="{Binding AvailableRevisions}" DisplayMemberPath="DisplayText"/>
                </Grid>

                <!-- Second Row -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="chkBanner" Content="Banner Status" VerticalAlignment="Center" Grid.Column="0"/>
                    <ComboBox x:Name="cbBanner" Width="400" Grid.Column="1" ItemsSource="{Binding AvailableBannerStatuses}"/>
                </Grid>

                <!-- Third Row -->
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="chkStatus" Content="Suitability Status" VerticalAlignment="Center" Grid.Column="0"/>
                    <ComboBox x:Name="cbStatus" Width="400" Grid.Column="1" ItemsSource="{Binding AvailableSuitabilityStatuses}"/>
                </Grid>
            </StackPanel>

            <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1" 
                    Height="1" Background="Gray" VerticalAlignment="Top" Margin="0,0,0,5"/>
            <Label Grid.Row="3" Grid.Column="1" Content="Select Sheets to Set:" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold"></Label>
            <DataGrid x:Name="dgFamilyGrid" Grid.Column="1" Grid.Row="4" ItemsSource="{Binding Sheets}" AutoGenerateColumns="False" CanUserAddRows="False" HeadersVisibility="Column" SelectionMode="Extended" SelectionUnit="FullRow" Background="LightGray" EnableColumnVirtualization="False">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="25">
                        <DataGridTemplateColumn.Header>
                            <CheckBox Click="HeaderCheckBox_Click" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </DataGridTemplateColumn.Header>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Sheet Name" Binding="{Binding SheetName}" Width="*"/>
                    <DataGridTextColumn Header="Sheet Number" Binding="{Binding SheetNumber}" Width="260"/>
                    <DataGridTextColumn Header="Current Rev" Binding="{Binding CurrentRev}" Width="75"/>
                    <DataGridTextColumn Header="Current Banner" Binding="{Binding CurrentBanner}" Width="400"/>
                    <DataGridTextColumn Header="Current Status" Binding="{Binding CurrentStatus}" Width="400"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" OpacityMask="#FF1C6B06">
                <Button x:Name="btnSet" Width="100" Height="25" Margin="0,0,10,0" Click="btnSet_Click">Set</Button>
                <Button x:Name="btnClose" Width="100" Height="25" Click="btnClose_Click">Close</Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
