<Window x:Class="HDR_EMEA.Forms.TagSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Tag Categories"
        Height="600" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Border Background="#FF3294AD">
        <Grid Margin="10" Background="GhostWhite">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <Rectangle Grid.Row="0" Grid.ColumnSpan="3" Fill="#FF3294AD"/>
            <Label Grid.Row="0" Grid.Column="1"
				   Content="Tag Categories"
				   FontSize="30" FontWeight="Bold"
				   VerticalAlignment="Center"
				   HorizontalAlignment="Left"/>
            <Image Grid.Row="0" Grid.Column="1"
				   Source="pack://application:,,,/HDR_EMEA;component/Resources/HDR_Logo_K.png"
				   HorizontalAlignment="Right"/>

            <!-- Separator -->
            <Border Grid.Row="1" Grid.Column="1" Height="1" Background="Gray"/>

            <!-- CheckBox list -->
            <ScrollViewer Grid.Row="2" Grid.Column="1"
						  Margin="0,10"
						  VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="stackSchedules"
							Orientation="Vertical"/>
            </ScrollViewer>

            <!-- OK / Cancel -->
            <StackPanel Grid.Row="3" Grid.Column="1"
						Orientation="Horizontal"
						HorizontalAlignment="Right">
                <Button x:Name="btnOK"
						Width="100" Height="25"
						Margin="0,0,8,0"
						Click="btnSave_Click">Save</Button>
                <Button x:Name="btnCancel"
						Width="100" Height="25"
						Click="btnCancel_Click">Cancel</Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>

